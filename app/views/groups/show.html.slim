- content_for :title
  = "#{@group.name} | #{t('global.app_name')}"

.panel.panel-default
  .panel-body
    = @group.description

h2
  = t('dashboard.activities')
.user-courses-container
  - if @activities
    - @activities.each do |activity|
      = render_activity activity, layout: :activity, locals: {group_context: true, author: activity.owner, course: @activity_courses[activity.id], signed_in_user: current_user, user_is_admin: (@group.admins.include? current_user), group_id: @group.id}
