= form_for(@approval, :html => { :class => "form-horizontal", :role => "form" }) do |f|
  - if @approval.errors.any?
    .alert.alert-danger.alert-dismissable role="alert"
      button.close type="button" data-dismiss="alert"
        span aria-hidden="true"
          | &times;
        span.sr-only
          | Close
      h4= "#{pluralize(@approval.errors.count,"error")} prohibited this approval from being saved:"
      ul
        - @approval.errors.full_messages.each do |msg|
          li= msg
  .form-group
    = f.label :date, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.datetime_select :date, :class => "form-control"
  .form-group
    = f.label :is_approved, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.check_box :is_approved, :class => "form-control"
  .form-group
    = f.label :description, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :description, :class => "form-control"
  .form-group
    = f.label :user, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :user, :class => "form-control"
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit :class => "btn btn-primary"
