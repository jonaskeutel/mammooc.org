= form_for(@course, :html => { :class => "form-horizontal", :role => "form" }) do |f|
  - if @course.errors.any?
    .alert.alert-danger.alert-dismissable role="alert"
      button.close type="button" data-dismiss="alert"
        span aria-hidden="true"
          | &times;
        span.sr-only
          | Close
      h4= "#{pluralize(@course.errors.count,"error")} prohibited this course from being saved:"
      ul
        - @course.errors.full_messages.each do |msg|
          li= msg
  .form-group
    = f.label :name, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :name, :class => "form-control"
  .form-group
    = f.label :url, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :url, :class => "form-control"
  .form-group
    = f.label :course_instructor, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :course_instructor, :class => "form-control"
  .form-group
    = f.label :abstract, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_area :abstract, :class => "form-control"
  .form-group
    = f.label :language, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :language, :class => "form-control"
  .form-group
    = f.label :imageId, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :imageId, :class => "form-control"
  .form-group
    = f.label :videoId, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :videoId, :class => "form-control"
  .form-group
    = f.label :start_date, :class => "col-sm-2 control-label"
    .col-sm-10
