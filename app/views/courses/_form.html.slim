  .form-group
    = f.label :categories, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :categories, :class => "form-control"
  .form-group
    = f.label :difficulty, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :difficulty, :class => "form-control"
  .form-group
    = f.label :requirements, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :requirements, :class => "form-control"
  .form-group
    = f.label :workload, :class => "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :workload, :class => "form-control"
