.registration-form
    = form_for @news_email, url: {action: "create"}, html: { class: 'navbar-form'} do |f|
      span.registration-headline
        = t('startpage.registration_news_email.headline')
      .form-group
        span.testclass
          = f.email_field :email, placeholder: t('startpage.registration_news_email.placeholder'), class: 'form-control'
