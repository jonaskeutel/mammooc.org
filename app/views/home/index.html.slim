#myCarousel.carousel.slide data-ride="carousel"
  ol.carousel-indicators
    li.active data-slide-to="0" data-target="#myCarousel" 
    li data-slide-to="1" data-target="#myCarousel" 
    li data-slide-to="2" data-target="#myCarousel" 
  .carousel-inner role="listbox" 
    .item.active
      = image_tag '/data/Empfehlung_web.jpg'
      .container
        .carousel-caption
          .background-transparent
          h1
            = t('startpage.carousel.recommend.headline')
          p
            = t('startpage.carousel.recommend.text')
          p
            a.btn.btn-lg.btn-primary href="#" role="button"  Sign up today
    .item
      = image_tag '/data/Fortschritt_web.jpg'
      .container
        .carousel-caption
          h1
            = t('startpage.carousel.progress.headline')
          p
            = t('startpage.carousel.progress.text')
          p
            a.btn.btn-lg.btn-primary href="#" role="button"  Learn more
    .item
      = image_tag '/data/Gruppenaktivitaet_web.jpg'
      .container
        .carousel-caption
          h1
            = t('startpage.carousel.evaluate.headline')
          p
            = t('startpage.carousel.evaluate.text')
          p
            a.btn.btn-lg.btn-primary href="#" role="button"  Browse gallery
  a.left.carousel-control data-slide="prev" href="#myCarousel" role="button" 
    span.glyphicon.glyphicon-chevron-left aria-hidden="true" 
    span.sr-only Previous
  a.right.carousel-control data-slide="next" href="#myCarousel" role="button" 
    span.glyphicon.glyphicon-chevron-right aria-hidden="true" 
    span.sr-only Next
/! /.carousel
